@import "base.scss";

.voucherDetails{
	width: 720px;
	margin: 20px auto 0;
	color: #999;
	.details{
		padding: 32px 20px;
		background-color: #FFFFFF;
	}
	.shopName{
		font-size: 28px;
		color: #555;
		line-height: 100%;
		margin-bottom: 26px;
	}
	.time{
		line-height: 100%;
		font-size: 22px;
	}
	.validity{
		line-height: 100%;
	}
	.sold{
		line-height: 100%;
		color: #ec3e27;
	}
	.mt{
		margin-top: 10px;
	}
	.priceBox{
		background-color: #FFFFFF;
		padding: 16px 20px;
	}
	.price{
		font-size: 26px;
		color: #ff8400;
		margin-bottom: 16px;
	}
	.price2{
		font-size: 22px;
	}
	.shareBox{
		display: block;
		height: 90px;
		line-height: 90px;
		padding: 0 20px;
		font-size: 28px;
		background-color: #FFFFFF;
		position: relative;
	}
	.leftArrow{
		width: 13px;
		height: 22px;
		background:url("../images/left-arrow.png") 0 0 no-repeat;
		background-size: contain;
		right: 20px;
	}
	.rule{
		height: 90px;
		line-height: 90px;
		padding: 0 20px;
		font-size: 28px;
		color: #333;
	}
	.ruleCont{
		padding: 30px 25px 44px ;
		font-size: 22px;
		color: #999;
		background-color: #FFFFFF;
		p{
			margin: 5px 0;
		}
	}
	.clickReceive{
		width: 680px;
		height: 80px;
		text-align: center;
		line-height: 80px;
		font-size: 28px;
		color: #FFFFFF;
		margin: 74px auto 0;
		display: block;
		background-color: #ff8400;
		border-radius: 5px;
	}
}