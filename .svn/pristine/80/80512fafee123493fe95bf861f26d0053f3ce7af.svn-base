@import "base.scss";
.placeOrder{
	width: 720px;
	margin: 0 auto;
	.boxOne{
		padding-top: 10px;
		background-color: #f8f6f3;
	}
	.boxOut{
		padding-left: 20px;
		background-color: #FFFFFF;
	}
	.herBox{
		height: 89px;
		line-height: 89px;
		padding-left: 25px;
		padding-right: 50px;
		@include font-dpr(14px);
		color: #868686;
		@include baceBorderB();
	}
	.herBox > span{
		height: 100%;
		line-height: inherit;
	}
	.addAndSub{
		height: 52px;
		margin-top: 16px;
		display: inline-block;
		font-size: 0;
		overflow: hidden;
		border: 1px solid #acacac;/*no*/
		@include bdr-radius();
		.add,.sub{
			width: 52px;
		}
		.val{
			width: 63px;
			border-right: 1px solid #acacac;/*no*/
			border-left: 1px solid #acacac;/*no*/
		}
		.active{
			color: #ff8400;
		}
	}
	.addAndSub > input{
		background-color: inherit;
		height: 52px;
		text-align: center;
		line-height: 52px;
		color: #868686;
		@include font-dpr(14px);
	}
	.addAndSub > input[type="button"]{
		@include font-dpr(20px);
	}
	.submitOrder{
		width: 680px;
		height: 82px;
		display: block;
		line-height: 82px;
		text-align: center;
		color: #FFFFFF;
		@include font-dpr(14px);
		margin: 45px auto 0;
		background-color: #ff8400;
		@include bdr-radius();
	}
}