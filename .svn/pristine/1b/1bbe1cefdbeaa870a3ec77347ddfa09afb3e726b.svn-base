@import "base.scss";
@mixin boxshadow{
	-webkit-box-shadow: 0 10px 5px #d2d1ce;
	-moz-box-shadow: 0 10px 5px #d2d1ce;
	box-shadow: 0 5px 10px #d2d1ce;/*no*/
}
.receiveCoupon{
	width: 720px;
	margin: 0 auto;

	.couponBox{
		width: 680px;
		height: 246px;
		margin: 20px auto;
		background-color: #f78f05;
		border-radius: 10px;
		@include boxshadow;
		color: #FFFFFF;
		text-align: center;
		overflow: hidden;
		position: relative;
		h3{
			font-size: 24px;
			margin: 38px auto 48px;
			line-height: 100%;
		}
	}
	.extras{
		font-size: 29px;
		line-height: 100%;
		span{
			font-size: 46px;
		}
	}
	.validity{
		height: 70px;
		line-height: 70px;
		font-size: 24px;
		position: absolute;
		background: url("../images/opacity.png") 0 0 repeat;
		left: 0;
		right: 0;
		bottom: 0;
	}
	.reminder{
		margin-top: 53px;
		padding-left: 40px;
		h3{
			font-size: 28px;
			color: #555555;
			line-height: 100%;
		}
		.tips{
			margin-top: 44px;
			padding-left: 42px;
			font-size: 22px;
			color: #999;
			p{
				line-height: 28px;
			}
		}
	}
	.clickReceive{
		width: 680px;
		height: 80px;
		text-align: center;
		line-height: 80px;
		font-size: 28px;
		color: #555555;
		margin: 78px auto 0;
		@include boxshadow;
		display: block;
		background-color: #FFFFFF;
		border-radius: 5px;
	}
}