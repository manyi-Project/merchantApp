@import "base.scss";
.tips{
	width: 720px;
	height: 56px;
	margin: 0 auto;
	background-color: #ffffff;
	padding-left: 20px;
	line-height: 56px;
	color: #ff8d24;
	@include font-dpr(14px);
}
.all_checkbox{
	width: 720px;
	padding: 10px 0 10px 20px;
	margin: 0 auto;
	background-color: #f8f6f3;
}
.input_checkbox{
	width: 20px;
	height: 20px;
	background-color: #e0e0e0;
	float: left;
	outline: 0;
}
.checkbox_font{
	height: 20px;
	line-height: 20px;
	float:left;
	margin-left: 12px;
}
.stayPay{
	.main{
		width: 720px;
		margin: 0 auto;
	}
	.shoppingList_box_outer{
		position: relative;
		margin-bottom: 17px;
	}
	.checkbox_box{
		position: absolute;
		top: 22px;
		left: 19px;
	}
	.shoppingList_box{
		padding: 0 50px;
		background-color: #ffffff;
		li{
			border-bottom: 1px solid #e3e3e3;/*no*/
		}
		li:last-child{
			border-bottom: none;
		}
	}
	.item_title{
		/*height: 107px;*/
		padding: 18px 0 16px 0;
		position: relative;
	}
	.item_title_img{
		width: 76px;
		height: 76px;
		background-color: #7f4b2c;
		float: left;
		img{
			width: 100%;
			height: 100%;
		}
	}
	.mainTitle{
		@include font-dpr(12px);
		color: #666;
		padding-left: 104px;
		padding-top: 10px;
	}
	.Subtitle{
		@include font-dpr(10px);
		color: #999;
		padding-left: 104px;
		padding-top: 5px;
	}
	.arrow{
		width: 13px;
		height: 22px;
		background-image: url("../images/orderList/arrow.png");
		background-size: cover;
		position: absolute;
		right: 0;
		top: 50%;
		-webkit-transform: translateY(-50%);
		-moz-transform: translateY(-50%);
		-ms-transform: translateY(-50%);
		-o-transform: translateY(-50%);
		transform: translateY(-50%);
	}
	.item_number{
		padding: 20px 0 24px 0;
	}
	.item_number_left{
		float: left;
	}
	.item_font{
		@include font-dpr(10px);
		color: #666;
	}
	.item_font1{
		margin-bottom: 15px;
	}
}