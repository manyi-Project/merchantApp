/*订单列表公共头*/
.statusBar {
  width: 720px;
  height: 100px;
  margin: 0 auto;
  background-color: #fff;
  position: fixed;
  top: 0;
  z-index: 100;
  left: 50%;
  -webkit-transform: translateX(-50%);
  -moz-transform: translateX(-50%);
  -ms-transform: translateX(-50%);
  -o-transform: translateX(-50%);
  transform: translateX(-50%); }
  .statusBar li {
    width: 20%;
    float: left;
    height: 100px;
    line-height: 100px; }
  .statusBar a {
    width: 100%;
    line-height: normal;
    color: #666;
    display: inline-block;
    border-right: 1px solid #e3e3e3;
    /*no*/
    font-size: 14px;
    /*no*/
    text-align: center; }
    [data-dpr="2"] .statusBar a {
      border-right: 2px solid #e3e3e3;
      /*no*/ }
    [data-dpr="3"] .statusBar a {
      border-right: 3px solid #e3e3e3;
      /*no*/ }
    [data-dpr="2"] .statusBar a {
      font-size: 28px;
      /*no*/ }
    [data-dpr="3"] .statusBar a {
      font-size: 42px;
      /*no*/ }
  .statusBar li:last-child a {
    border-right: none;
    /*no*/ }

.selected {
  border-bottom: 2px solid #ff8400;
  /*no*/ }
  [data-dpr="2"] .selected {
    border-bottom: 4px solid #ff8400;
    /*no*/ }
  [data-dpr="3"] .selected {
    border-bottom: 6px solid #ff8400;
    /*no*/ }

.selected a {
  color: #ff8400; }

.common_noOrder {
  position: absolute;
  top: 50%;
  left: 50%;
  text-align: center;
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  -o-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%); }

.common_noOrder .bigfont {
  font-size: 30px;
  color: #333;
  line-height: 100%; }

.common_noOrder .smallfont {
  font-size: 20px;
  color: #999;
  line-height: 100%;
  margin-top: 16px; }
