@import "base.scss";
/*订单列表公共头*/
.statusBar{
	width: 720px;
	height: 100px;
	margin: 0 auto;
	background-color: #fff;
	li{
		width: 20%;
		float: left;
		height: 100px;
		line-height: 100px;
	}
	a{
		width: 100%;
		line-height: normal;
		color: #666;
		display: inline-block;
		@include borderR-dpr();
		@include font-dpr(14px);
		text-align: center;
	}
	li:last-child a{
		border-right: none;/*no*/
	}
}
.selected{
	@include borderB-dpr(2px,solid,#ff8400);
}
.selected a{
	color: #ff8400;
}
/*返回公共头样式*/
.comment_title{
	width: 720px;
	height: 96px;
	margin: 0 auto;
	@include font-dpr(19px);
	text-align: center;
	line-height: 96px;
	color: #fff;
	background-color: #ff8400;
	position: relative;
}
.comment_return{
	height: 32px;
	line-height: 32px;
	margin-left: 20px;
	@include font-dpr(15px);
	color: #fff;
	text-align: left;
	float: left;
	position: absolute;
	background:url("../images/orderList/left_arrow.png") left center no-repeat;
	padding-left: 25px;
	background-size: contain;
	top: 50%;
	-webkit-transform: translateY(-50%);
	-moz-transform: translateY(-50%);
	-ms-transform: translateY(-50%);
	-o-transform: translateY(-50%);
	transform: translateY(-50%);
	display: block;
}