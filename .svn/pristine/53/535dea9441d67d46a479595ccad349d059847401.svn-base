.hotelDetails2 {
  padding-bottom: 142px; }
  .hotelDetails2 .groupBuy {
    padding: 26px 22px 0;
    margin-bottom: 10px;
    background-color: #FFFFFF;
    overflow: hidden;
    position: relative; }
    .hotelDetails2 .groupBuy h3 {
      font-size: 28px;
      color: #333;
      margin-bottom: 26px; }
    .hotelDetails2 .groupBuy p {
      font-size: 22px;
      color: #686868;
      margin-bottom: 26px; }
  .hotelDetails2 .eatTime {
    font-size: 22px;
    color: #333;
    font-weight: bolder;
    margin-left: 38px; }
  .hotelDetails2 .unitPrice {
    right: 40px; }
  .hotelDetails2 .numberOfPeople {
    font-size: 22px;
    color: #686868; }
  .hotelDetails2 .pirce {
    font-size: 28px;
    color: #fc1212;
    margin-left: 43px;
    font-weight: bolder; }
  .hotelDetails2 .groupNotesOut {
    padding-left: 20px;
    background-color: #FFFFFF; }
  .hotelDetails2 .groupNotes {
    height: 79px;
    line-height: 79px;
    font-size: 28px;
    color: #333;
    border-bottom: 1px solid #e3e3e3; }
  .hotelDetails2 .groupCont {
    padding-top: 26px;
    padding-bottom: 8px;
    font-size: 22px;
    overflow: hidden; }
    .hotelDetails2 .groupCont li {
      margin-bottom: 18px; }
    .hotelDetails2 .groupCont h3 {
      color: #ff8400;
      font-weight: bolder;
      line-height: 100%;
      margin-bottom: 16px; }
    .hotelDetails2 .groupCont p {
      color: #686868;
      line-height: 100%; }
    .hotelDetails2 .groupCont p:before {
      content: '';
      display: inline-block;
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background-color: #868686;
      margin: 0 7px 4px; }
  .hotelDetails2 .panicBuy {
    width: 720px;
    height: 141px;
    margin: 0 auto;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    border-top: 1px solid #e3e3e3;
    background-color: #FFFFFF; }
    .hotelDetails2 .panicBuy .pirce, .hotelDetails2 .panicBuy .unit {
      color: #fc1212;
      font-size: 28px; }
    .hotelDetails2 .panicBuy .pirce {
      font-size: 50px;
      font-weight: bolder; }
    .hotelDetails2 .panicBuy .originalPrice {
      font-size: 22px;
      color: #686868;
      margin-left: 22px; }
  .hotelDetails2 .panBuy {
    width: 188px;
    height: 66px;
    line-height: 66px;
    text-align: center;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
    background-color: #ff921d;
    color: #FFFFFF;
    font-size: 22px;
    right: 45px; }
