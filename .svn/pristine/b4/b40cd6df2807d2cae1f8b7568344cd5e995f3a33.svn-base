@import "base";
.pageHome{
	//@include LRcenter(720);
	.search{
		//width: 700px;
		height: 64px;
		margin: 10px auto;
		overflow: hidden;
		position: relative;
		@include bdr-radius(5px);
		input{
			@include square();
			@include font-dpr(11px);
			color: $baceFontCol;
			background-color: #ebebeb;
			text-align: center;
		}
		.searchImg{
			@include square(20px);
			background: url("../images/iconfont-search.png") 0 0 no-repeat;
			background-size: contain;
			left: 289px;
		}
	}
	.swiper-container {
		width: 100%;
		height: 300px;
	}
	.swiper-slide {
		text-align: center;
		@include font-dpr(19px);
		background: #fff;
		/* Center slide text vertically */
		display: -webkit-box;
		display: -ms-flexbox;
		display: -webkit-flex;
		display: flex;
		-webkit-box-pack: center;
		-ms-flex-pack: center;
		-webkit-justify-content: center;
		justify-content: center;
		-webkit-box-align: center;
		-ms-flex-align: center;
		-webkit-align-items: center;
		align-items: center;
	}
	.swiper-slide img{
		width: 100%;
		height: 100%;
	}
	.swiper-pagination-bullet{
		@include square(10px);
		display: inline-block;
		border-radius: 100%;
		background: #e5e5e5;
		opacity: 1;
	}
	.swiper-pagination-bullet-active{
		background-color: #ff8400;
	}
	.swiper-container-horizontal>.swiper-pagination{
		bottom: 15px;
	}
	.localClass{
		background-color: #fff;
		margin-top: 10px;
		.classList{
			@include LRcenter(720);
			overflow: hidden;
			ul{
				width: 720px;
				margin-top: 20px;
				padding: 0 50px;
				display: -moz-box;
				display: -ms-flexbox;
				display: -webkit-box;
				display: -webkit-flex;
				display: box;
				display: flexbox;
				display: flex;
				-ms-justify-content: space-between;
				-webkit-justify-content: space-between;
				justify-content: space-between;
			}
			li{
				width: 100px;
				//display: inline-block;
				//float: left;
				margin-top: 10px;
				margin-bottom: 30px;
				text-align: center;
				//margin-right: 35px;
			}
			.icon{
				@include square(72px);
				margin: 0 auto;
				img{
					width: 100%;
				}
			}
			.font{
				margin-top: 15px;
				@include font-dpr(11px);
				color: #555;
			}
		}
	}
	.title{
		height: 79px;
		padding: 0 22px;
		@include baceBorderB();
		.name{
			@include font-dpr(14px);
			color: #555;
			position: relative;
		}
		.more{
			@include font-dpr(11px);
			color: $baceFontCol;
			position: relative;
			background: url("../images/left-arrow.png") right 0 no-repeat;
			background-size: contain;
			padding-right: 20px;
		}
	}
	.discount{
		margin-top: 20px;
		background-color: #FFFFFF;
	}
	.cont{
		padding: 20px 20px 0 20px;
		overflow: hidden;
		a{
			display: block;
			height: 200px;
			margin-bottom: 20px;
			overflow: hidden;
			img{
				width: 100%;
			}
		}
	}
	.Countdown{
		a{
			width: 468px;
		}
	}
	.countDown{
		width: 202px;
		height: 200px;
		background: url("../images/Countdown.png") 0 0 no-repeat;
		background-size: contain;
	}
	.conuntdown{
		word-spacing: -1px;
		font-size: 0;
		text-align: center;
		margin-top: 110px;
		span{
			display: inline-block;
			width: 46px;
			@include lineHeightEQHeight(30px);
			vertical-align: middle;
			color: #ff8400;
			background: #1d1d1d;
			text-align: center;
			@include font-dpr(12px);
			border-radius: 5px;
		}
		.dot{
			width: 25px;
			color: #333;
			background: transparent;
		}
	}
	.localMall{margin-top: 20px;
		background-color: #FFFFFF;
	}
	.goodsList{
		margin-left: 20px;
		padding: 20px 20px 20px 134px;
		@include baceBorderB();
	}
	.goodsImg{
		width: 134px;
		height: 100px;
		margin-left: -134px;
		img{
			width: 100%;
		}
	}
	.goodsOut{
		width: 100%;
		padding-left: 20px;
	}
	.goodsName{
		margin-top: 15px;
		margin-bottom: 15px;
	}
	.goodsname{
		@include font-dpr(14px);
		color: #555555;
		line-height: 100%;
	}
	.position{
		@include font-dpr(12px);
		color: $baceFontCol;
		line-height: 100%;
	}
	.goodspirce{
		color: #ff8400;
		@include font-dpr(14px);
		line-height: 100%;
	}
	.saleNumb{
		color: #555555;
		@include font-dpr(12px);
	}
}