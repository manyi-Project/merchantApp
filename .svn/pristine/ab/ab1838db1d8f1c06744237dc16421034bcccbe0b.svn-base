.hotelDetails {
  width: 720px;
  margin: 0 auto; }
  .hotelDetails .banner {
    height: 270px;
    position: relative; }
    .hotelDetails .banner img {
      width: 100%;
      height: 100%; }
    .hotelDetails .banner .photo {
      width: 68px;
      height: 68px;
      position: absolute;
      right: 30px;
      bottom: 16px;
      background: url("../images/photoNumb.png") 0 0 no-repeat;
      background-size: contain;
      text-align: center;
      padding-top: 38px;
      color: #FFFFFF; }
      .hotelDetails .banner .photo .span {
        font-size: 18px; }
  .hotelDetails .payBil {
    padding: 22px;
    background-color: #FFFFFF;
    border-bottom: 1px solid #e3e3e3;
    position: relative; }
    .hotelDetails .payBil h3 {
      font-size: 28px;
      color: #333; }
  .hotelDetails .start {
    margin-top: 10px;
    font-size: 20px; }
    .hotelDetails .start .starslist {
      margin-right: 9px; }
    .hotelDetails .start .span {
      margin-left: 6px;
      color: #333;
      margin-right: 25px; }
    .hotelDetails .start .span2 {
      color: #999; }
  .hotelDetails .payBilButton {
    width: 131px;
    height: 52px;
    line-height: 52px;
    text-align: center;
    font-size: 26px;
    right: 40px;
    background-color: #ff8400;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
    color: #FFFFFF; }
  .hotelDetails .dress {
    height: 125px;
    padding: 20px 20px;
    border-bottom: 1px solid #e3e3e3;
    background-color: #FFFFFF;
    font-size: 22px;
    color: #686868; }
    .hotelDetails .dress p {
      height: 32px;
      line-height: 32px;
      margin: 10px 0; }
  .hotelDetails .dressIcon {
    background: url("../images/didian.png") 0 0 no-repeat; }
  .hotelDetails .photoIcon {
    background: url("../images/phone.png") 0 0 no-repeat; }
  .hotelDetails .dressIcon, .hotelDetails .photoIcon {
    width: 32px;
    height: 32px;
    background-size: contain;
    margin-right: 10px; }
  .hotelDetails .comment {
    padding: 0 20px;
    height: 80px;
    line-height: 80px;
    border-bottom: 1px solid #e3e3e3;
    background-color: #FFFFFF; }
  .hotelDetails .commetLeft {
    font-size: 28px;
    color: #333333; }
  .hotelDetails .commetRight {
    font-size: 22px;
    color: #999;
    padding-right: 26px;
    background: url("../images/left-arrow.png") right center no-repeat; }
  .hotelDetails .commentBox {
    padding: 20px;
    background-color: #FFFFFF;
    border-bottom: 1px solid #e3e3e3; }
  .hotelDetails .commentImg {
    width: 75px;
    height: 75px;
    margin-right: 30px; }
    .hotelDetails .commentImg img {
      width: 100%; }
  .hotelDetails .userStart {
    margin-top: 10px; }
  .hotelDetails .usename {
    font-size: 22px;
    color: #ff8400;
    margin-top: 8px; }
  .hotelDetails .userStart .userStartlist {
    margin-right: 10px; }
  .hotelDetails .userStart .font {
    font-size: 22px;
    color: #686868;
    margin-left: 12px; }
  .hotelDetails .commentFont {
    font-size: 22px;
    color: #686868;
    margin: 22px 0 26px 0; }
  .hotelDetails .commentImg2 {
    margin-bottom: 26px; }
    .hotelDetails .commentImg2 li {
      width: 115px;
      height: 115px;
      margin-right: 10px; }
      .hotelDetails .commentImg2 li img {
        width: 100%; }
  .hotelDetails .kuangOut {
    text-align: right;
    font-size: 0;
    word-spacing: -1px; }
  .hotelDetails .kuang {
    width: 98px;
    height: 48px;
    border-radius: 48px;
    position: relative; }
  .hotelDetails .zan {
    background: url("../images/weizan.png") 0 0 no-repeat;
    background-size: contain; }
  .hotelDetails .zanActive {
    background: url("../images/zan.png") 0 0 no-repeat;
    background-size: contain; }
  .hotelDetails .pinglun {
    margin-left: 20px;
    background: url("../images/comment.png") 0 0 no-repeat;
    background-size: contain; }
  .hotelDetails .zanAlert {
    display: none;
    position: fixed;
    z-index: 20;
    background: url("../images/opacity_alert.png") 0 0 repeat; }
  .hotelDetails .zanInner {
    width: 515px;
    height: 216px;
    background-color: #FFFFFF;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px; }
    .hotelDetails .zanInner p {
      font-size: 34px;
      color: #333333;
      text-align: center;
      line-height: 48px; }
  .hotelDetails .success {
    width: 73px;
    height: 73px;
    margin: 35px auto 0;
    background: url("../images/iconfont-success.png") 0 0 no-repeat;
    background-size: contain; }
